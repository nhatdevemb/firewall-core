#!/bin/sh /etc/rc.common

START=99
STOP=10

USE_PROCD=1
PROG=/usr/bin/node
SCRIPT=/etc/bmcweb/backend/server.bundle.js

start_service() {
    procd_open_instance
    procd_set_param command $PROG $SCRIPT
    procd_set_param respawn  # restart if crashed
    procd_close_instance
}

stop_service() {
    # Optional: procd handles this usually
    echo "Stopping bmcweb..."
}
